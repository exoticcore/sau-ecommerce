{
  "name": "product",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc -p .",
    "start": "yarn && tsc -p . && node ./dist/server.js",
    "dev": "nodemon -I --exec node --experimental-specifier-resolution=node --loader ts-node/esm ./src/server.ts",
    "prisma:dev:deploy": "yarn prisma migrate deploy",
    "db:dev:up": "docker compose up db-dev -d",
    "db:dev:rm": "docker compose rm db-dev -f -s -v",
    "prisma:test:deploy": "dotenv -e .env.test -- yarn prisma migrate deploy",
    "db:dev:restart": "yarn db:dev:rm && yarn db:dev:up && sleep 1 && yarn prisma:dev:deploy",
    "db:test:up": "docker compose -f docker-compose-test.yml up db-test -d",
    "db:test:rm": "docker compose -f docker-compose-test.yml rm db-test -f -s -v",
    "db:test:restart": "yarn db:test:rm && yarn db:test:up && sleep 1 && yarn prisma:test:deploy",
    "pretest": "yarn db:test:restart",
    "test": "dotenv -e .env.test -- jest --watch --no-cache",
    "test:unit": "yarn db:test:restart && dotenv -e .env.test -- jest unit --watch --no-cache",
    "test:int": "jest int"
  },
  "dependencies": {
    "@prisma/client": "^5.4.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.5",
    "dotenv-cli": "^7.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.4.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
