{
  "compilerOptions": {
    "target": "ES2015",

    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "src",
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
