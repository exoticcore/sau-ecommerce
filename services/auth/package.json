{
  "name": "express",
  "version": "1.0.0",
  "main": "index.js",
  "author": "exoticcore <greannakub@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc -p .",
    "start": "tsc -p . && node ./dist/server.js",
    "dev": "nodemon -I --exec node --experimental-specifier-resolution=node  --loader ts-node/esm ./src/server.ts",
    "prisma:dev:deploy": "yarn prisma migrate deploy",
    "db:dev:up": "docker compose up db-dev -d",
    "db:dev:rm": "docker compose rm db-dev -f -s -v",
    "db:dev:restart": "yarn db:dev:rm && yarn db:dev:up && sleep 1 && yarn prisma:dev:deploy",
    "prisma:test:deploy": "dotenv -e .env.test -- yarn prisma migrate deploy",
    "db:test:up": "docker compose -f docker-compose-test.yml up db-test -d",
    "db:test:rm": "docker compose -f docker-compose-test.yml rm db-test -f -s -v",
    "db:test:restart": "yarn db:test:rm && yarn db:test:up && sleep 1 && yarn prisma:test:deploy",
    "pretest": "yarn db:test:restart",
    "test": "dotenv -e .env.test -- jest --watch --no-cache",
    "test:unit": "yarn db:test:restart && dotenv -e .env.test -- jest unit --watch --no-cache",
    "test:int": "jest int"
  },
  "dependencies": {
    "@keycloak/keycloak-admin-client": "^22.0.3",
    "@prisma/client": "^5.4.1",
    "@types/redis": "^4.0.11",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.5",
    "openid-client": "^5.6.0",
    "passport": "^0.6.0",
    "redis": "^4.6.10",
    "useragent": "^2.3.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@prisma/client": "^5.4.1",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/express-session": "^1.17.8",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node-fetch": "^2.6.6",
    "@types/nodemailer": "^6.4.11",
    "@types/passport": "^1.0.13",
    "@types/useragent": "^2.3.2",
    "dotenv-cli": "^7.3.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "nodemon": "^3.0.1",
    "prisma": "^5.3.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
